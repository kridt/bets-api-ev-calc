# EV Betting App - Environment Variables Example
# Copy this file to .env and fill in your values

# ===========================================
# FRONTEND (Vite) - prefix with VITE_
# ===========================================

# Supabase - Universal bet tracking
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# The Odds API - Get your key at: https://the-odds-api.com/
VITE_ODDS_API_KEY=your_odds_api_key

# OpticOdds API - Get your key at: https://opticodds.com/
VITE_OPTIC_ODDS_API_KEY=your_optic_odds_api_key

# BallDontLie API
VITE_BALLDONTLIE_API_KEY=your_balldontlie_api_key

# Firebase Configuration - Get from Firebase Console
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Cache server URL (optional - for production)
VITE_CACHE_SERVER_URL=https://your-cache-server.onrender.com

# ===========================================
# BACKEND (Node.js) - no prefix needed
# ===========================================

# The Odds API (server-side)
ODDS_API_KEY=your_odds_api_key

# OpticOdds API (server-side)
OPTIC_ODDS_API_KEY=your_optic_odds_api_key

# Football-Data.org API - Get from: https://www.football-data.org/client/register
FOOTBALL_DATA_API_KEY=your_football_data_api_key

# BetsAPI Token
BETSAPI_TOKEN=your_betsapi_token

# RapidAPI Football Key
RAPIDAPI_FOOTBALL_KEY=your_rapidapi_key
